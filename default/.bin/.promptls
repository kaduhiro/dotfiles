#!/bin/sh

# in=$([ -p /dev/stdin ] && cat - || echo $@)

printf "$2" | nl 1>&2
printf '\033[1;36m?\033[m %s \033[2;37m%s\033[m' "$1" "${3:+($3) }" 1>&2

_input_=
read _input_

_output_=
: ${_output_:=$(printf "$2" | awk 'NR=="'$_input_'"')}
: ${_output_:=$(printf "$2" | grep -x "$_input_")}
: ${_output_:=$(printf "$2" | grep -m1 "$_input_")}
: ${_output_:=${_input_:-$3}}

printf "$_output_"
